<body>
  <h1>Nothing But Net, But You Better Miss</h1>
  <p>Try to miss the shot! ğŸ€</p>
  <input type="text" id="shot-input" placeholder="Shoot? (y/n)">
  <button id="submit-btn">Submit</button>
  <p id="result"></p>

  <script>
    let attempts = 3;
    let score = 0;

    document.getElementById("submit-btn").addEventListener("click", () => {
      const shot = document.getElementById("shot-input").value.toLowerCase();
      if (shot === "y") {
        if (Math.random() < 0.8) { // 80% chance of scoring
          document.getElementById("result").innerHTML = "Yikes, you're really good at thisâ€”too bad that's bad. ğŸ˜‚";
          score++;
        } else {
          document.getElementById("result").innerHTML = "Loser! And we mean that as a compliment! ğŸ˜Š";
          attempts--;
        }
      } else {
        document.getElementById("result").innerHTML = "You didn't even try! ğŸ˜”";
        attempts--;
      }
      document.getElementById("shot-input").value = "";
      if (attempts === 0) {
        document.getElementById("result").innerHTML = `Your final score is: ${score}`;
      }
    });
  </script>
